  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.20.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/taskmaster-team/taskmaster-obsidian.git"
  },
  "bugs": {
    "url": "https://github.com/taskmaster-team/taskmaster-obsidian/issues"
  },
  "homepage": "https://github.com/taskmaster-team/taskmaster-obsidian#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "main.js",
    "settings.js",
    "styles.css",
    "manifest.json"
