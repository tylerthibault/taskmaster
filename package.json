{
  "name": "taskmaster-obsidian",
  "version": "1.0.0",
  "description": "Project Planner, Task Tracker, Time Logger & Assignment Manager for Obsidian",
  "main": "main.js",
  "scripts": {
    "build": "node build.js",
    "dev": "node build.js --watch",
    "test": "echo \"No tests specified\" && exit 0",
